<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MauBuatDrawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:title="@null"
            android:id="@+id/toolbar"
            android:background="@color/bg"
            android:elevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchMode"
                    android:fontFamily="@font/poppins_light"
                    android:text="Mode Terang"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/bg"
            android:id="@+id/fragment_container">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/bg"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IsiAja"
                        android:fontFamily="@font/poppins_light"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAlignment="center"
                        android:id="@+id/tvIsiAja"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginTop="50dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/etNamaLengkap"
                        android:layout_height="wrap_content"
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:hint="Nama Lengkap"
                        android:layout_margin="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxStrokeColor="@color/text"
                        android:textColorHint="@color/text"
                        app:endIconMode="clear_text"
                        app:counterMaxLength="20"
                        app:counterEnabled="true"
                        app:layout_constraintTop_toBottomOf="@+id/tvIsiAja">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/etAlamatLengkap"
                        android:layout_height="wrap_content"
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:hint="Alamat Lengkap"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxStrokeColor="@color/text"
                        android:textColorHint="@color/text"
                        app:endIconMode="clear_text"
                        app:counterMaxLength="20"
                        app:counterEnabled="true"
                        app:layout_constraintTop_toBottomOf="@+id/etNamaLengkap">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/etNoHP"
                        android:layout_height="wrap_content"
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                        android:hint="Nomor Telepon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxStrokeColor="@color/text"
                        android:textColorHint="@color/text"
                        app:endIconMode="clear_text"
                        app:counterMaxLength="20"
                        app:counterEnabled="true"
                        app:layout_constraintTop_toBottomOf="@+id/etAlamatLengkap">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:inputType="number"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAgama"
                        android:text="Agama"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/etNoHP"
                        android:textSize="20sp"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/agama"
                        android:id="@+id/spinnerAgama"
                        app:layout_constraintTop_toBottomOf="@id/tvAgama"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvJenisKelamin"
                        android:text="Jenis Kelamin"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/spinnerAgama"
                        android:textSize="20sp"/>

                    <RadioGroup
                        app:layout_constraintTop_toBottomOf="@id/tvJenisKelamin"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/rbJenisKelamin"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                            <RadioButton
                                android:layout_width="170dp"
                                android:textAlignment="center"
                                android:id="@+id/lakilaki"
                                android:button="@color/transparent"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/custom_radio_selector"
                                android:fontFamily="@font/poppins_light"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/perempuan"
                                android:layout_height="wrap_content"
                                android:text="Laki Laki"
                                tools:ignore="MissingConstraints" />

                            <RadioButton
                                android:layout_width="170dp"
                                android:textAlignment="center"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:id="@+id/perempuan"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/lakilaki"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_radio_selector"
                                android:button="@color/transparent"
                                android:text="Perempuan"
                                tools:ignore="MissingConstraints" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvKegemaran"
                        android:text="Kegemaran"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/rbJenisKelamin"
                        android:textSize="20sp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Membaca"
                        android:id="@+id/cbMembaca"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_light"
                        app:layout_constraintTop_toBottomOf="@id/tvKegemaran"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menulis"
                        android:id="@+id/cbMenulis"
                        android:fontFamily="@font/poppins_light"
                        app:layout_constraintTop_toBottomOf="@id/cbMembaca"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belajar"
                        android:id="@+id/cbBelajar"
                        android:fontFamily="@font/poppins_light"
                        app:layout_constraintTop_toBottomOf="@id/cbMenulis"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olahraga"
                        android:id="@+id/cbOlahraga"
                        android:fontFamily="@font/poppins_light"
                        app:layout_constraintTop_toBottomOf="@id/cbBelajar"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <Button
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:text="Kirim"
                        android:textColor="@color/bg"
                        android:layout_marginTop="50dp"
                        android:id="@+id/btnKirim"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:fontFamily="@font/poppins_light"
                        android:backgroundTint="@color/numberKal"
                        app:layout_constraintTop_toBottomOf="@id/cbOlahraga"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bgputihbuatbawah"
                        android:backgroundTint="@color/bg"
                        app:layout_constraintTop_toBottomOf="@id/btnKirim"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#8D1E28"
        android:background="@color/bg"
        app:itemTextColor="@color/text"
        app:menu="@menu/nav_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MauBuatDrawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:title="@null"
            android:id="@+id/toolbar"
            android:background="@color/bg"
            android:elevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchMode"
                    android:text="@string/light_mode"
                    android:fontFamily="@font/poppins_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/bg"
            android:id="@+id/fragment_container">


            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/main"
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ProfileActivity">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:src="@drawable/hilmidanpixelartnya"
                        android:id="@+id/gambarku"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="60dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_name"
                        android:id="@+id/namaKu"
                        android:textSize="35sp"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gambarku"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_profession"
                        android:id="@+id/profesiku"
                        android:layout_marginTop="38dp"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="18sp"
                        android:textColor="@color/text"
                        app:layout_constraintTop_toTopOf="@id/namaKu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/biografiSaya"
                        android:background="@drawable/untukprofil1"
                        app:layout_constraintTop_toBottomOf="@id/profesiku"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_biography"
                            android:textColor="@color/text"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="18sp"
                            android:id="@+id/tvBiografiSaya"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSpesialis"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/specialist"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvBiografiSaya"
                            android:layout_marginStart="35dp"
                            android:textColor="#929191"
                            android:textSize="13dp"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fullstack"
                            android:id="@+id/tvFullstack"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvSpesialis"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="17dp"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#929191"
                            app:layout_constraintTop_toBottomOf="@id/tvFullstack"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="7dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvIdolaCoding"
                            android:text="@string/idol"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="#929191"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvFullstack"
                            android:layout_marginStart="35dp"
                            android:textSize="13dp"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/idols"
                            android:textColor="@color/text"
                            android:id="@+id/tvSandhikaDKK"
                            android:fontFamily="@font/poppins_light"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvIdolaCoding"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="17dp"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#929191"
                            app:layout_constraintTop_toBottomOf="@id/tvSandhikaDKK"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="7dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPengalaman"
                            android:text="@string/experience"
                            android:textColor="#929191"
                            android:fontFamily="@font/poppins_light"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvSandhikaDKK"
                            android:layout_marginStart="35dp"
                            android:textSize="13dp"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/learning"
                            android:textColor="@color/text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvPengalaman"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:id="@+id/tvCukupMahir"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="17dp"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#929191"
                            app:layout_constraintTop_toBottomOf="@id/tvCukupMahir"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="7dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeknologi"
                            android:text="@string/technology"
                            android:textColor="#929191"
                            android:fontFamily="@font/poppins_light"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvCukupMahir"
                            android:layout_marginStart="35dp"
                            android:textSize="13dp"
                            android:layout_marginTop="15dp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvTeknologi"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:id="@+id/logoHTML"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_9"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toTopOf="@id/tvTeknologi"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toEndOf="@id/logoHTML"
                            android:id="@+id/logoCSS"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_10"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toTopOf="@id/tvTeknologi"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toEndOf="@id/logoCSS"
                            android:id="@+id/logoJAVA"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_11"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toTopOf="@id/tvTeknologi"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toEndOf="@id/logoJAVA"
                            android:id="@+id/logoCPP"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_12"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toTopOf="@id/tvTeknologi"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toEndOf="@id/logoCPP"
                            android:id="@+id/logoJS"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_13"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toTopOf="@id/tvTeknologi"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toEndOf="@id/logoJS"
                            android:id="@+id/logoKOTLIN"
                            android:layout_marginTop="25dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_14"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/logoHTML"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/logoXML"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="18sp"
                            android:background="@drawable/img_15"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:background="@drawable/untukprofil1"
                        app:layout_constraintTop_toBottomOf="@id/biografiSaya"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/social_media"
                            android:textColor="@color/text"
                            android:textSize="18sp"
                            android:id="@+id/tvSosialMedia"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/tvSosialMedia"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/logoWA"
                            android:layout_marginTop="17dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/logoWA"
                            android:text="@string/phone_number"
                            android:textColor="@color/text"
                            android:fontFamily="@font/poppins_light"
                            app:layout_constraintTop_toTopOf="@id/logoWA"
                            app:layout_constraintBottom_toBottomOf="@id/logoWA"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/logoWA"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/logoIG"
                            android:layout_marginTop="8dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_17"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/logoIG"
                            android:text="@string/instagram"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/text"
                            app:layout_constraintTop_toTopOf="@id/logoIG"
                            app:layout_constraintBottom_toBottomOf="@id/logoIG"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/logoIG"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/logoGITHUB"
                            android:layout_marginTop="8dp"
                            android:textSize="18sp"
                            android:background="@drawable/img_18"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/logoGITHUB"
                            android:text="@string/github"
                            android:textColor="@color/text"
                            android:fontFamily="@font/poppins_light"
                            app:layout_constraintTop_toTopOf="@id/logoGITHUB"
                            app:layout_constraintBottom_toBottomOf="@id/logoGITHUB"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toBottomOf="@id/logoGITHUB"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/logoEMAIL"
                            android:layout_marginTop="8dp"
                            android:textSize="18sp"
                            android:layout_marginBottom="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@drawable/img_19"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/logoEMAIL"
                            android:text="@string/email"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/text"
                            app:layout_constraintTop_toTopOf="@id/logoEMAIL"
                            app:layout_constraintBottom_toBottomOf="@id/logoEMAIL"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>



        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#8D1E28"
        android:background="@color/bg"
        app:itemTextColor="@color/text"
        app:menu="@menu/nav_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MauBuatDrawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:title="@null"
            android:id="@+id/toolbar"
            android:background="@color/bg"
            android:elevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchMode"
                    android:text="@string/light_mode"
                    android:fontFamily="@font/poppins_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/bg"
            android:id="@+id/fragment_container">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvManganSek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="@string/warung_title"
                            android:fontFamily="@font/poppins_light"
                            android:textAlignment="center"
                            android:textColor="@color/text"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etPemesan"
                            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:hint="@string/customer_name"
                            android:textColorHint="@color/text"
                            app:boxStrokeColor="@color/text"
                            app:counterEnabled="true"
                            app:counterMaxLength="20"
                            app:endIconMode="clear_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvManganSek">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tvMakanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="32dp"
                            android:text="@string/foodndrink"
                            android:textColor="@color/text"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_light"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etPemesan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="39dp"
                            android:layout_marginRight="20dp"
                            android:text="@string/see_more"
                            android:textColor="#929191"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="15sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etPemesan" />

                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:scrollbars="none"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:clipToPadding="false"
                            app:layout_constraintTop_toBottomOf="@+id/tvMakanan">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvMakanan1"
                                    android:layout_width="170dp"
                                    android:layout_height="280dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/imgNasiGorengPedas"
                                            android:layout_width="match_parent"
                                            android:layout_height="150dp"
                                            android:layout_margin="10dp"
                                            app:cardCornerRadius="20dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:scaleType="centerCrop"
                                                android:background="@drawable/img_5"/>
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tvNasiGorengPedas"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/spicy_fried_rice"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp"
                                            android:textColor="@color/text"
                                            android:textSize="16sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/imgNasiGorengPedas"/>

                                        <TextView
                                            android:id="@+id/tvHargaMakanan1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="15.000"
                                            android:layout_marginStart="15dp"
                                            android:fontFamily="@font/poppins_light"
                                            android:textColor="#929191"
                                            android:textSize="14sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/tvNasiGorengPedas"/>

                                        <ImageButton
                                            android:id="@+id/tombolMinusMakanan1"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_21"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:hint="0"
                                            android:textAlignment="center"
                                            android:textSize="12sp"
                                            android:id="@+id/jumlahNasiPedas"
                                            android:textColorHint="@color/text"
                                            android:background="@drawable/bingkaicardviewhijau"
                                            app:layout_constraintStart_toEndOf="@id/tombolMinusMakanan1"
                                            app:layout_constraintEnd_toStartOf="@id/tombolPlusMakanan1"
                                            app:layout_constraintBottom_toBottomOf="@id/tombolMinusMakanan1"
                                            app:layout_constraintTop_toTopOf="@id/tombolMinusMakanan1"/>

                                        <ImageButton
                                            android:id="@+id/tombolPlusMakanan1"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_22"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvMakanan2"
                                    android:layout_width="170dp"
                                    android:layout_height="280dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/imgNasiCampur"
                                            android:layout_width="match_parent"
                                            android:layout_height="150dp"
                                            android:layout_margin="10dp"
                                            app:cardCornerRadius="20dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:scaleType="centerCrop"
                                                android:background="@drawable/img_6"/>
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tvNasiCampur"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/mixed_rice"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp"
                                            android:textColor="@color/text"
                                            android:textSize="16sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/imgNasiCampur"/>

                                        <TextView
                                            android:id="@+id/tvHargaMakanan2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="15.000"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_marginStart="15dp"
                                            android:textColor="#929191"
                                            android:textSize="14sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/tvNasiCampur"/>

                                        <ImageButton
                                            android:id="@+id/tombolMinusMakanan2"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_21"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:hint="0"
                                            android:textAlignment="center"
                                            android:id="@+id/jumlahNasiCampur"                                            android:textSize="12sp"
                                            android:textColorHint="@color/text"
                                            android:background="@drawable/bingkaicardviewhijau"
                                            app:layout_constraintStart_toEndOf="@id/tombolMinusMakanan2"
                                            app:layout_constraintEnd_toStartOf="@id/tombolPlusMakanan2"
                                            app:layout_constraintBottom_toBottomOf="@id/tombolMinusMakanan2"
                                            app:layout_constraintTop_toTopOf="@id/tombolMinusMakanan2"/>

                                        <ImageButton
                                            android:id="@+id/tombolPlusMakanan2"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_22"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvMinuman1"
                                    android:layout_width="170dp"
                                    android:layout_height="280dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/imgEsTeh"
                                            android:layout_width="match_parent"
                                            android:layout_height="150dp"
                                            android:layout_margin="10dp"
                                            app:cardCornerRadius="20dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:scaleType="centerCrop"
                                                android:background="@drawable/img_7"/>
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tvEsTeh"
                                            android:layout_width="0dp"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_height="wrap_content"
                                            android:text="@string/ice_tea"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp"
                                            android:textColor="@color/text"
                                            android:textSize="16sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/imgEsTeh"/>

                                        <TextView
                                            android:id="@+id/tvHargaMinuman1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="15.000"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_marginStart="15dp"
                                            android:textColor="#929191"
                                            android:textSize="14sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/tvEsTeh"/>

                                        <ImageButton
                                            android:id="@+id/tombolMinusMinuman1"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_21"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:hint="0"
                                            android:textAlignment="center"
                                            android:textSize="12sp"
                                            android:id="@+id/jumlahEsTeh"
                                            android:textColorHint="@color/text"
                                            android:background="@drawable/bingkaicardviewhijau"
                                            app:layout_constraintStart_toEndOf="@id/tombolMinusMinuman1"
                                            app:layout_constraintEnd_toStartOf="@id/tombolPlusMinuman1"
                                            app:layout_constraintBottom_toBottomOf="@id/tombolMinusMinuman1"
                                            app:layout_constraintTop_toTopOf="@id/tombolMinusMinuman1"/>

                                        <ImageButton
                                            android:id="@+id/tombolPlusMinuman1"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_22"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvMinuman2"
                                    android:layout_width="170dp"
                                    android:layout_height="280dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/imgEsBuah"
                                            android:layout_width="match_parent"
                                            android:layout_height="150dp"
                                            android:layout_margin="10dp"
                                            app:cardCornerRadius="20dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:scaleType="centerCrop"
                                                android:background="@drawable/img_8"/>
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tvEsBuah"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/fruit_ice"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="10dp"
                                            android:textColor="@color/text"
                                            android:textSize="16sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/imgEsBuah"/>

                                        <TextView
                                            android:id="@+id/tvHargaMinuman2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="15.000"
                                            android:fontFamily="@font/poppins_light"
                                            android:layout_marginStart="15dp"
                                            android:textColor="#929191"
                                            android:textSize="14sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/tvEsBuah"/>

                                        <ImageButton
                                            android:id="@+id/tombolMinusMinuman2"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_21"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>

                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:hint="0"
                                            android:textAlignment="center"
                                            android:textSize="12sp"
                                            android:id="@+id/jumlahEsBuah"
                                            android:textColorHint="@color/text"
                                            android:background="@drawable/bingkaicardviewhijau"
                                            app:layout_constraintStart_toEndOf="@id/tombolMinusMinuman2"
                                            app:layout_constraintEnd_toStartOf="@id/tombolPlusMinuman2"
                                            app:layout_constraintBottom_toBottomOf="@id/tombolMinusMinuman2"
                                            app:layout_constraintTop_toTopOf="@id/tombolMinusMinuman2"/>

                                        <ImageButton
                                            android:id="@+id/tombolPlusMinuman2"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/img_22"
                                            android:backgroundTint="@color/logoBeranda"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </HorizontalScrollView>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@drawable/bgputihbuatbawah"
                            android:backgroundTint="@color/bg"
                            app:layout_constraintTop_toBottomOf="@id/horizontalScrollMenu" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHitung"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#8D1E28"
                    android:text="@string/calculate"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#8D1E28"
        android:background="@color/bg"
        app:itemTextColor="@color/text"
        app:menu="@menu/nav_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>